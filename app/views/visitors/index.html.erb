<h3>
  Welcome!
  <% if current_user %>
    <%= current_user.name %>
  <% end %>

</h3>

<% if current_user %>
  <%= form_for @image, :html => { :multipart => true } do |f| %>
    <%= f.label :avatar, 'Upload image:'%>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
    <br />
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  <% end %>
  <h3>Uploaded Files:</h3>
  <br>

  <% current_user.images.each do |image| %>
    <%= image_tag image.avatar.url, style: 'height: 200px; float: left; margin-left: 15px' %>
  <% end %>
<% end %>
